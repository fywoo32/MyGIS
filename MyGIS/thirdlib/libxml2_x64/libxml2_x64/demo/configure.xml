				<Filetype>Geotiff</Filetype>					
			</File>
			<File>
				<Filepath>china_2000_1000m.tif</Filepath>
				<Year>2000</Year>
				<!-- no need -->
				<Filetype>Geotiff</Filetype>
			</File>
			<File>
